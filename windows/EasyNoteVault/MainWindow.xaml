<Window x:Class="EasyNoteVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyNoteVault  |  By: djcyc"
        Width="1000"
        Height="650"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部区域 -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,10"
                   LastChildFill="False">

            <!-- 左侧标题 -->
            <TextBlock Text="EasyNoteVault-随记"
                       FontSize="22"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>

            <!-- 右侧操作区 -->
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">

                <!-- 搜索框 -->
                <TextBox x:Name="SearchBox"
                         Width="250"
                         Height="28"
                         Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged"
                         ToolTip="搜索（名称 / 网站 / 账号 / 备注）"/>

                <!-- 导入 -->
                <Button Content="导入"
                        Width="80"
                        Margin="0,0,5,0"
                        Click="Import_Click"/>

                <!-- 导出 -->
                <Button Content="导出"
                        Width="80"
                        Click="Export_Click"/>

                <!-- WebDAV -->
                <Button Content="WebDAV"
                        Width="80"
                        Margin="8,0,0,0"
                        Click="WebDav_Click"/>

                <!-- 状态点 -->
                <Button x:Name="WebDavStatusBtn"
                        Width="18"
                        Height="18"
                        Margin="6,0,0,0"
                        Click="WebDavStatus_Click"
                        Background="Gray"
                        BorderThickness="0"
                        ToolTip="WebDAV 状态">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="{TemplateBinding Background}" Stroke="Transparent"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </DockPanel>

        <!-- 主表格 -->
        <DataGrid x:Name="VaultGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  IsReadOnly="False"
                  SelectionUnit="Cell"
                  ContextMenuOpening="VaultGrid_ContextMenuOpening"
                  PreviewMouseLeftButtonDown="VaultGrid_PreviewMouseLeftButtonDown"
                  PreviewMouseDoubleClick="VaultGrid_PreviewMouseDoubleClick"
                  CellEditEnding="VaultGrid_CellEditEnding">

            <!-- 右键菜单 -->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="粘贴"
                              Click="PasteMenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <!-- 列定义 -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="名称"
                                    Binding="{Binding Name}"
                                    Width="150"/>

                <DataGridTextColumn Header="网站"
                                    Binding="{Binding Url}"
                                    Width="250"/>

                <DataGridTextColumn Header="账号"
                                    Binding="{Binding Account}"
                                    Width="200"/>

                <DataGridTextColumn Header="密码"
                                    Binding="{Binding Password}"
                                    Width="200"/>

                <DataGridTextColumn Header="备注"
                                    Binding="{Binding Remark}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ✅ 轻提示 Toast（不打断输入） -->
        <Border x:Name="ToastBorder"
                Grid.RowSpan="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,46,10,0"
                Padding="10,6"
                Background="#CC000000"
                CornerRadius="6"
                Opacity="0"
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <TextBlock x:Name="ToastText"
                       Foreground="White"
                       FontSize="13"
                       Text="已复制"/>
        </Border>

    </Grid>
</Window>
