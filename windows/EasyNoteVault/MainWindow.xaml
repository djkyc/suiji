<Window x:Class="EasyNoteVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyNoteVault"
        Width="1000"
        Height="650"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部 -->
        <DockPanel Margin="0,0,0,10"
                   LastChildFill="False">

            <!-- 左侧标题 -->
            <TextBlock Text="EasyNoteVault-随记By:djkcy"
                       FontSize="22"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>

            <!-- 右侧区域 -->
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">

                <!-- 搜索框 -->
                <TextBox x:Name="SearchBox"
                         Width="250"
                         Height="28"
                         Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged"
                         ToolTip="搜索（名称 / 网站 / 账号 / 备注）"/>

                <!-- 导入 / 导出 -->
                <Button Content="导入"
                        Width="80"
                        Margin="0,0,5,0"
                        Click="Import_Click"/>

                <Button Content="导出"
                        Width="80"
                        Click="Export_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- 表格 -->
        <DataGrid x:Name="VaultGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  IsReadOnly="False"
                  SelectionUnit="Cell">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="粘贴"
                              Click="PasteMenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="网站" Binding="{Binding Url}" Width="250"/>
                <DataGridTextColumn Header="账号" Binding="{Binding Account}" Width="200"/>
                <DataGridTextColumn Header="密码" Binding="{Binding Password}" Width="200"/>
                <DataGridTextColumn Header="备注" Binding="{Binding Remark}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 底部 -->
        <Button Grid.Row="2"
                Content="＋ 新增一行"
                Width="120"
                Height="32"
                Margin="0,10,0,0"
                Click="AddRow_Click"/>
    </Grid>
</Window>
